	redir https://{new_host}{uri} permanent
}

##### SERVICES #####

ip.xn--sb-lka.org, ipv4.xn--sb-lka.org, ipv6.xn--sb-lka.org {
	# import std_settings
	header Access-Control-Allow-Origin "*"
	templates
	route /json {
		header Content-Type application/json
		respond {"ip":"{.RemoteIP}}","country":"todo"}
	}
	header Content-Type text/plain
	respond "{{.RemoteIP}}"
}

(tls_reply) {
	import std_settings
	tls {
		protocols {args.0} {args.1}
	}
	respond "You are connected with {tls_version} (proto: {http.request.tls.proto}). Cipher: {tls_cipher}."
}

tls12.xn--sb-lka.org {
	import tls_reply tls1.2 tls1.2
}
tls13.xn--sb-lka.org {
	import tls_reply tls1.3 tls1.3
}
tls.xn--sb-lka.org {
	import tls_reply tls1.2 tls1.3
}
mtls.xn--sb-lka.org {
	import std_settings
	tls {
		client_auth {
			mode require
		}
	}
	respond "You are connected with {tls_version} (proto: {http.request.tls.proto}). Cipher: {tls_cipher}.<br/>Fingerprint: {tls_client_fingerprint}.<br/>Your public key: {http.request.tls.client.public_key}.<br/>Certificate chain: {http.request.tls.client.certificate_pem}"
}

(http_reply) {
	import std_settings
	tls {
		alpn {args.0}
	}
	map {args.0}	{proto_name} {
		http/1.1	HTTP/1.1
		h2			HTTP/2.0
		h3			HTTP/3.0
	}
	@correctALPN `{http.request.proto} == {proto_name}`
	respond @correctALPN "You are connected with {http.request.proto} ({tls_version}, {tls_cipher})."
	respond "You are connected with {http.request.proto} instead of {proto_name} ({tls_version}, {tls_cipher})."
}

http.xn--sb-lka.org {
	import std_settings
	respond "You are connected with {http.request.proto} ({tls_version}, {tls_cipher})."
}
http1.xn--sb-lka.org, http11.xn--sb-lka.org {
	import http_reply http/1.1
}
http2.xn--sb-lka.org {
	import http_reply h2
}
http3.xn--sb-lka.org {
	import http_reply h3
}

##### END SERVICES #####

